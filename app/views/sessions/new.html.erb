<%= form_tag session_path, :class => "form login" do -%>
  <div class="group wat-cf">
    <div class="left"><%= label_tag 'login' %></div>
    <div class="right"><%= text_field_tag 'login', @login %></div>
  </div>
  <div class="group wat-cf">
    <div class="left"><%= label_tag 'password' %></div>
    <div class="right"><%= password_field_tag 'password', nil %></div>
  </div>
  <div class="group navform wat-cf">
    <div class="right">
      <button class="button" type="submit">
        <%= image_tag 'web-app-theme/key.png' %>
        Login
      </button>
    </div>
  </div>
<% end -%>

<table class="table">
  <tr>
    <td>
      <%= I18n.t('target_period') %>
    </td>
    <td>
      <%= System.describe_evaluation_term %>
    </td>
  </tr>
  <tr>
    <td>
      <%= I18n.t('implementation period') %>
    </td>
    <td>
      <%= System.describe_implementation_term %>
    </td>
  </tr>
</table>
