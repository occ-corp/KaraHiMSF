    <tr>
      <td>
        <%= I18n.t('eval_close') %>
      </td>
      <td>
        <%= if @system.evaluation_closed
              I18n.t('close')
            else
              I18n.t('unclosed')
            end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= I18n.t('open_results_to_top') %>
      </td>
