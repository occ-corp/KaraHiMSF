        <%= if @system.evaluation_published_managers
              I18n.t('be_available')
            else
              I18n.t('closed')
            end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= I18n.t('open_results_to_all') %>
      </td>
      <td>
        <%= if @system.evaluation_published_employees
              I18n.t('be_available')
            else
              I18n.t('closed')
            end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= I18n.t('show_interview_check') %>
      </td>
