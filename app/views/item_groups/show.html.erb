<%= form_tag item_group_path, :method => :get do -%>
  <div class="actions-bar wat-cf">
    <div class="actions">
      <%= select_tag('item_group_id',
                     options_for_select(ItemGroup.order_by_name.all.collect{ |g|
                                          [g.name, g.id]
                                        },
                                        @item_group.id),
                     :onchange => 'submit()') %>
    </div>
  </div>
<% end -%>

<div class="actions-bar wat-cf">
  <div class="actions">
    <%= link_to edit_icon_tag + I18n.t('copy'), new_item_group_path(:item_group_id => @item_group) %>
  </div>
</div>

<%= render :partial => 'form' %>
